{
  "name": "bankproxy",
  "version": "0.9.0",
  "description": "Access bank transactions and initiate payments with an unified HTTP API",
  "scripts": {
    "coverage": "rm -rf coverage/combined && mkdir -p coverage_reports && cp coverage/e2e/coverage-final.json coverage_reports/e2e.json && cp coverage/unit/coverage-final.json coverage_reports/unit.json && nyc merge coverage_reports coverage/combined/coverage-final.json && nyc report -t coverage/combined --reporter html --report-dir coverage/combined",
    "dev": "ts-node-dev index.ts",
    "docs:api": "redoc-cli bundle -o docs/.vuepress/public/api/index.html docs/openapi.yaml",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs": "npm run docs:api && npm run docs:build",
    "lint": "eslint index.ts src tests",
    "start": "ts-node index.ts",
    "test": "npm run test:unit && npm run test:e2e && npm run coverage",
    "test:e2e": "ts-node tests/run_e2e.ts",
    "test:unit": "jest"
  },
  "author": "Patrick Gansterer <paroga@paroga.com>",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "basic-auth": "^2.0.1",
    "body-parser": "^1.20.0",
    "bursar": "0.0.3",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.1",
    "fakeredis": "^2.0.0",
    "ibantools": "^4.1.6",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "playwright": "^1.25.2",
    "redis": "^4.3.1",
    "sequelize": "^6.21.6",
    "sqlite3": "^5.1.0",
    "tough-cookie": "^4.1.2",
    "trouter": "=3.1.0",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.8.3",
    "uuid": "^9.0.0",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/redis": "^4.0.11",
    "@types/tough-cookie": "^4.0.2",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cypress": "^9.7.0",
    "eslint": "^8.23.1",
    "eslint-plugin-prettier": "^4.2.1",
    "find-open-port": "^2.0.3",
    "jest": "^29.0.3",
    "jest-ts-auto-mock": "^2.1.0",
    "nock": "^13.2.9",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "redoc-cli": "^0.13.20",
    "ts-auto-mock": "^3.6.2",
    "ts-jest": "^29.0.1",
    "ts-node-dev": "^2.0.0",
    "vuepress": "^1.9.7",
    "vuepress-plugin-mermaidjs": "^1.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "index.ts"
    ],
    "coverageReporters": [
      "html",
      "json"
    ],
    "coverageDirectory": "coverage/unit",
    "setupFiles": [
      "<rootDir>/tests/jest-config.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript",
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    },
    "testPathIgnorePatterns": [
      "/cypress/"
    ]
  },
  "nyc": {
    "include": [
      "src",
      "index.ts"
    ]
  }
}
